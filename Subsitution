#include <cs50.h>
#include <ctype.h>
#include <stdio.h>
#include <string.h>

bool valid_key(string key);

int main(int argc, string argv[])
{
    // Check command-line arguments
    if (argc != 2)
    {
        printf("Usage: ./substitution key\n");
        return 1;
    }

    string key = argv[1];

    // Validate key
    if (!valid_key(key))
    {
        printf("Key must contain 26 unique alphabetic characters.\n");
        return 1;
    }

    // Get plaintext
    string plaintext = get_string("plaintext: ");

    printf("ciphertext: ");

    // Encrypt plaintext
    for (int i = 0, n = strlen(plaintext); i < n; i++)
    {
        char c = plaintext[i];

        if (isalpha(c))
        {
            int index = toupper(c) - 'A';
            char sub = key[index];

            if (isupper(c))
            {
                printf("%c", toupper(sub));
            }
            else
            {
                printf("%c", tolower(sub));
            }
        }
        else
        {
            printf("%c", c);
        }
    }

    printf("\n");
    return 0;
}

bool valid_key(string key)
{
    // Key must be exactly 26 characters
    if (strlen(key) != 26)
    {
        return false;
    }

    bool seen[26] = {false};

    for (int i = 0; i < 26; i++)
    {
        if (!isalpha(key[i]))
        {
            return false;
        }

        int index = toupper(key[i]) - 'A';

        // Check for duplicate letters
        if (seen[index])
        {
            return false;
        }

        seen[index] = true;
    }

    return true;
}
